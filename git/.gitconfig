[user]
	email = wamberg@hearth.works
	name = Bill Amberg

[pager]
	branch = false

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[core]
	excludesfile = ~/.gitignore_global
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	features = line-numbers decorations
	whitespace-error-style = 22 reverse
	side-by-side = true

# Include tinted-delta theme (generated by tinty)
[include]
	path = ~/.local/share/tinted-theming/tinty/artifacts/delta-configs-file.gitconfig
[pull]
	ff = only
[init]
	defaultBranch = main
[safe]
	directory = /home/wamberg/dev/dot_files
