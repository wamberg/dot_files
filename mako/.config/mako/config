# Timeout in milliseconds (5000 = 5 seconds)
default-timeout=5000

# Position on screen
anchor=top-center
margin=10

# Border settings
border-size=2
border-radius=5

# Color scheme - managed by tinty
# These colors are updated by ~/.config/tinty/hooks/reload-mako.sh
background-color=#282a36
text-color=#f8f8f2
border-color=#bd93f9

# Dismiss notifications
# - on-button-left: dismiss on left click
# - on-button-right: dismiss on right click
# - on-touch: dismiss on touch (for touchscreens)
on-button-left=dismiss
on-button-right=dismiss

# Grouping (stack similar notifications)
group-by=app-name
max-history=10

# Block chat app notifications - these will be handled by waybar
[app-name="Slack"]
invisible=true

[app-name="Telegram Desktop"]
invisible=true
