# Starship configuration with tinty theme support
# Colors managed by tinty - do not edit color values directly
# Scheme: {{scheme-name}} by {{scheme-author}}

"$schema" = 'https://starship.rs/config-schema.json'

format = """
$directory\
$git_branch\
$git_state\
$git_status\
$cmd_duration\
$line_break\
$nix_shell\
$python\
$character"""

[directory]
style = "bold #{{base0F-hex}}"
truncation_length = 0
truncate_to_repo = false

[character]
success_symbol = "[❯](#{{base0E-hex}})"
error_symbol = "[❯](#{{base08-hex}})"
vimcmd_symbol = "[❮](#{{base0B-hex}})"

[git_branch]
format = "[$branch]($style)"
style = "#{{base03-hex}}"

[git_status]
format = "[[(*$conflicted$untracked$modified$staged$renamed$deleted)]($style) ($ahead_behind$stashed)]($style)"
style = "#{{base0E-hex}}"
conflicted = "​"
untracked = "​"
modified = "​"
staged = "​"
renamed = "​"
deleted = "​"
stashed = "≡"

[git_state]
format = '\([$state( $progress_current/$progress_total)]($style)\) '
style = "#{{base03-hex}}"

[cmd_duration]
format = "[$duration]($style) "
style = "#{{base0A-hex}}"

[python]
format = "[$virtualenv]($style) "
style = "#{{base03-hex}}"
detect_extensions = []
detect_files = []

[nix_shell]
format = "[$symbol]($style)"
symbol = "❄️"
style = "bold #{{base0F-hex}}"
impure_msg = ""
pure_msg = ""
unknown_msg = ""
